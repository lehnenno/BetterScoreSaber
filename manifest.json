{
  "manifest_version": 2,
  "name": "BetterScoreSaber",
  "version": "0.3",
  "description": "A plugin that adds a download button to ScoreSaber.",
  "homepage_url": "https://github.com/lehnenno/betterscoresaber",
  "browser_specific_settings": {
    "gecko": {
      "id": "{34b514f8-3331-4f3c-9028-f7b743c6e770}",
      "update_url": "https://github.com/lehnenno/BetterScoreSaber/blob/main/updates.json"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "tabs",
    "webNavigation",
    "*://scoresaber.com/*",
    "*://*.beatsaver.com/*"
  ],
  "background": {
    "scripts": [
      "background_script.js"
    ]
  }
}